<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/card"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginLeft="@dimen/dp10"
                                   app:cardBackgroundColor="#ffffff"
                                   android:layout_marginRight="@dimen/dp10"
                                   android:layout_marginTop="@dimen/dp5"
                                   android:layout_marginBottom="@dimen/dp5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dp5"
            android:id="@+id/side_bar"
            android:layout_height="match_parent"
            android:background="@drawable/left_color_bar" />

        <com.app.newuidashboardadmin.CircularImageView
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:src="@drawable/profile"
            app:border="true"
            android:id="@+id/sellerimage"
            app:border_width="1dp"
            app:border_color="#2F3855"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp7" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:padding="@dimen/sp10">
            <com.app.newuidashboardadmin.font.FiraSansBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Somanath lenka"
                android:id="@+id/name"
                android:textSize="@dimen/sp13"
                android:textColor="#2F3855"/>
            <com.app.newuidashboardadmin.font.FiraSemiBoldTextView
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content"
                android:text="24, Male | Odisha,India"
                android:maxLines="1"
                android:id="@+id/subtitel"
                android:textSize="@dimen/sp10"
                android:textColor="#747B83"/>
            <com.app.newuidashboardadmin.font.FiraSemiBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="08:00 AM - 09:15 AM"
                android:layout_marginTop="2dp"
                android:id="@+id/time"
                android:textSize="@dimen/sp10"
                android:textColor="#747B83"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center|right"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginRight="@dimen/dp10"
            android:padding="@dimen/sp10">

            <ImageView
                android:layout_width="@dimen/dp23"
                android:layout_height="@dimen/dp23"
                android:layout_gravity="right"
                android:tint="#2F3855"
                android:padding="3dp"
                android:src="@drawable/menu" />

            <com.app.newuidashboardadmin.font.FiraSemiBoldTextView
                android:id="@+id/sessiontype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="GROUP SESSION"
                android:layout_gravity="right"
                android:gravity="right"
                android:textSize="@dimen/sp10"
                android:textColor="#B16A00" />

            <Button
                android:id="@+id/bookbutton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp30"
                android:layout_marginTop="5dp"
                android:text="VIEW DETAILS"
                android:textSize="@dimen/sp9"
                android:paddingRight="@dimen/dp10"
                android:clickable="false"
                android:paddingLeft="@dimen/dp10"
                android:textColor="#ffffff"
                android:background="@drawable/round_rectangle_blue" />


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>