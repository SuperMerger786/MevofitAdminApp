<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/card"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginLeft="@dimen/dp10"
                                   app:cardBackgroundColor="#ffffff"
                                   android:layout_marginRight="@dimen/dp10"
                                   android:layout_marginTop="@dimen/dp5"
                                   android:layout_marginBottom="@dimen/dp5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp5"
            android:layout_height="match_parent"
            android:src="@drawable/left_color_bar" />

        <com.app.newuidashboardadmin.CircularImageView
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:src="@drawable/banner_menu"
            app:border="true"
            app:border_width="1dp"
            app:border_color="#000000"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp10" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:padding="@dimen/sp10">
            <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Somanath lenka"
                android:textSize="@dimen/sp15"
                android:textColor="#6C6C6C"/>
            <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="24, Male | Odisha,India"
                android:maxLines="1"
                android:textSize="@dimen/sp11"
                android:textColor="#979797"/>
            <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="08:00 AM - 09:15 AM"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/sp11"
                android:textColor="#979797"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginRight="@dimen/dp10"
            android:padding="@dimen/sp10">
            <ImageView
                android:layout_gravity="right"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:tint="#595959"
                android:padding="3dp"
                android:src="@drawable/menu"/>
            <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="GROUP SESSION"
                android:layout_gravity="right"
                android:gravity="right"
                android:textSize="@dimen/sp11"
                android:textColor="#B16A00"/>
            <Button
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:text="VIEW DETAILS"
                android:textSize="@dimen/sp11"
                android:paddingRight="@dimen/dp10"
                android:paddingLeft="@dimen/dp10"
                android:textColor="#ffffff"
                android:layout_height="@dimen/dp30"
                android:background="@drawable/round_rectangle_blue"/>


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>