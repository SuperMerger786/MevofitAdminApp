<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/RelativeLayo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/deep_white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp10"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_challengeHeaderLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/frag_menu_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp10"
                android:src="@drawable/newui_buddy" />


            <com.app.newuidashboardadmin.font.LatoBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="Mevo App"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_medium" />

            <ImageView
                android:id="@+id/iv_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dp15"
                android:src="@drawable/newui_bell"
                android:visibility="visible" />


        </RelativeLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RelativeLayo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/totoal_performance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/auto_btn_right"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/auto_btn_right"
                android:layout_marginBottom="@dimen/dp10"
                android:clickable="true"
                app:cardBackgroundColor="@color/deep_white"
                app:cardCornerRadius="6dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_userHeaderLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.app.newuidashboardadmin.font.LatoSemiBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:drawableLeft="@drawable/newui_bullet"
                            android:drawablePadding="@dimen/dp5"
                            android:text="TOTAL PERFORMANCE"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:src="@drawable/newui_ordercale" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp15"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp15"
                        android:layout_marginBottom="@dimen/dp15"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp5"
                                android:text="Booking"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp13" />

                            <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                                android:id="@+id/total_booking"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp13" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp5"
                                android:text="Earning"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp13" />

                            <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                                android:id="@+id/total_earn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp13" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp5"
                                android:text="Rating"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp13" />

                            <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                                android:id="@+id/total_avrrate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp13" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/booking_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/auto_btn_right"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/auto_btn_right"
                android:clickable="true"
                app:cardBackgroundColor="@color/deep_white"
                app:cardCornerRadius="6dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.app.newuidashboardadmin.font.LatoSemiBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_marginBottom="@dimen/dp10"
                            android:drawableLeft="@drawable/newui_bullet"
                            android:drawablePadding="@dimen/dp5"
                            android:text="TODAY'S BOOKING"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp14" />

                        <com.app.newuidashboardadmin.font.LatoSemiBoldTextView
                            android:id="@+id/book_count"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:layout_marginBottom="@dimen/dp10"
                            android:background="@drawable/circular_image_stroke"
                            android:gravity="center"
                            android:padding="@dimen/dp5"
                            android:text="5"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/dp12" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light" />

                    <ListView
                        android:id="@+id/booking_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/booking_status_graph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/auto_btn_right"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginRight="@dimen/auto_btn_right"
                android:clickable="true"
                app:cardBackgroundColor="@color/deep_white"
                app:cardCornerRadius="6dp"
                android:visibility="visible"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.app.newuidashboardadmin.font.LatoSemiBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_marginBottom="@dimen/dp10"
                            android:drawableLeft="@drawable/newui_bullet"
                            android:drawablePadding="@dimen/dp5"
                            android:text="GRAPH"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp14" />

                        <com.app.newuidashboardadmin.font.LatoSemiBoldTextView
                            android:id="@+id/book_count_graph"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:layout_marginBottom="@dimen/dp10"
                            android:gravity="center"
                            android:padding="@dimen/dp5"
                            android:text="View"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/sp14" />
                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/deep_white"
                        android:paddingBottom="15dp">

                        <LinearLayout
                            android:id="@+id/tabs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:visibility="visible"
                            android:weightSum="3">

                            <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                                android:id="@+id/weekly_tab"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/graphHeading"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLines="1"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="@string/all_c"
                                android:visibility="gone"
                                android:background="@drawable/btn_green_solid30"
                                android:textColor="@color/deep_white"
                                android:textSize="@dimen/sp14" />

                            <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                                android:id="@+id/monthly_tab"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/graphHeading"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@drawable/btn_green_solid30"
                                android:text="BOOKING"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/sp14" />

                            <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                                android:id="@+id/yearly_tab"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/graphHeading"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLines="1"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="PAYMENT"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/sp14" />

                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/chart_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tabs"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="250dp">

                                <com.app.newuidashboardadmin.VerticalLabelView
                                    android:id="@+id/label"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="5dp"
                                    app:textColor_v="@color/black"
                                    app:textSize_v="@dimen/sp16"
                                    android:visibility="gone"
                                    app:text_v="Sleep" />

                                <com.github.mikephil.charting.charts.LineChart
                                    android:id="@+id/chart"
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_toRightOf="@+id/label"
                                    android:visibility="visible" />
                            </RelativeLayout>


                            <LinearLayout
                                android:id="@+id/add_entry"
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/no_data_found" />

                                <com.app.newuidashboardadmin.font.FiraSansMediumTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/chart_layout"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/no_record_toast"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Roboto_16sp" />


                            </LinearLayout>
                        </FrameLayout>

                    </RelativeLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:id="@+id/ln_upcomming_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginBottom="@dimen/dp10"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/banner_menu" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp125"
                        android:background="@color/deep_white"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_marginBottom="@dimen/dp10"
                            android:drawableLeft="@drawable/newui_bullet"
                            android:drawablePadding="@dimen/dp5"
                            android:text="ANNOUNCEMENTS"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp14"
                            android:visibility="gone" />


                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycerView_upcomming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"

                    android:layout_marginBottom="@dimen/dp25"
                    android:background="@android:color/transparent" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:background="@color/deep_white"
                android:orientation="vertical"
                android:visibility="visible">

                <com.app.newuidashboardadmin.font.LatoSemiBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:drawableLeft="@drawable/newui_bullet"
                    android:drawablePadding="@dimen/dp5"
                    android:text="Reference code"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp14" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp15"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <com.app.newuidashboardadmin.font.FiraSansMediumTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="share your reference code with client"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp35"
                            android:layout_below="@+id/text_connectNow"
                            android:layout_gravity="left"
                            android:layout_marginRight="@dimen/dp15"
                            android:layout_weight="1"
                            android:background="@drawable/btn_grey_dark_outline_15"
                            android:gravity="left|center"
                            android:hint="enter code"
                            android:paddingLeft="@dimen/dp10"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:textSize="@dimen/sp14" />

                        <com.app.newuidashboardadmin.font.LatoSemiBoldTextView
                            android:layout_width="@dimen/dp80"
                            android:layout_height="@dimen/dp35"
                            android:layout_below="@+id/text_connectNow"
                            android:layout_marginRight="@dimen/dp30"
                            android:layout_toRightOf="@+id/canceltxt"
                            android:background="@drawable/round_rectangle_blue"
                            android:gravity="center"
                            android:text="Share"
                            android:textColor="@color/deep_white"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <!--        </android.support.v7.widget.CardView>-->

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

