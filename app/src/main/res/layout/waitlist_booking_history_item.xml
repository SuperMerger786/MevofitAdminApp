<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/card"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginLeft="@dimen/dp5"
                                   android:layout_marginRight="@dimen/dp5"
                                   android:layout_marginTop="@dimen/dp5"
                                   android:layout_marginBottom="@dimen/dp5"
                                   android:elevation="5dp"
                                   app:cardBackgroundColor="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <com.app.newuidashboardadmin.font.FiraSansBoldTextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Somanath lenka"
                    android:textSize="@dimen/sp12"
                    android:textColor="#2F3855" />

                <com.app.newuidashboardadmin.font.FiraSemiBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Female, 33 yrs"
                    android:id="@+id/gender_age"
                    android:maxLines="1"
                    android:textSize="@dimen/sp9"
                    android:textColor="#747B83" />

                <com.app.newuidashboardadmin.font.FiraSemiBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:id="@+id/session_type"
                    android:text="GROUP SESSION"
                    android:textSize="@dimen/sp9"
                    android:textColor="#B16A00" />

                <com.app.newuidashboardadmin.font.FiraSemiBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="San jose, USA"
                    android:id="@+id/place_city"
                    android:textAllCaps="true"
                    android:layout_marginTop="2dp"
                    android:textSize="@dimen/sp9"
                    android:textColor="#316CD0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_marginTop="@dimen/dp6"
                android:layout_marginRight="@dimen/dp10">

                <com.app.newuidashboardadmin.font.FiraSemiBoldTextView
                    android:layout_marginTop="@dimen/dp5"
                    android:id="@+id/lastsession_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LAST SESSION | PERSONAL"
                    android:maxLines="1"
                    android:gravity="right"
                    android:textSize="@dimen/sp9"
                    android:textColor="#44A3AD" />

                <com.app.newuidashboardadmin.font.FiraSemiBoldTextView
                    android:id="@+id/last_session_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="28 jul|07:15 - 07:45 PM"
                    android:textSize="@dimen/sp9"
                    android:textColor="#747B83" />

                <com.app.newuidashboardadmin.font.FiraSemiBoldTextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:text="$35.00"
                    android:textSize="@dimen/sp15"
                    android:textColor="#316CD0" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:paddingBottom="@dimen/dp10">

            <Button
                android:id="@+id/acept_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp40"
                android:layout_weight="1"
                android:text="ACCEPT"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/sp9"
                android:clickable="false"
                android:textColor="#ffffff"
                android:background="@drawable/round_rectangle_blue" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp40"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="DECLINE"
                android:textSize="@dimen/sp9"
                android:clickable="false"
                android:textColor="#E51928"
                android:background="@drawable/red_rectangle_border" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>