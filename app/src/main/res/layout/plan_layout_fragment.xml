<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#CECECE"
              android:padding="5dp">

    <com.app.newuidashboardadmin.font.FiraSansRegularTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Bussiness Plan"
        android:textSize="@dimen/sp15"
        android:textAllCaps="true"
        android:textColor="#48526A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard"
                android:layout_weight="1"
                android:buttonTint="@color/exercise_header"
                android:textSize="@dimen/sp15"
                android:textColor="#48526A" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/exercise_header"
                android:text="Custome"
                android:textSize="@dimen/sp15"
                android:textColor="#48526A" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30">

        <com.app.newuidashboardadmin.font.FiraSemiBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp15"
            android:text="SET TIME"
            android:textColor="#48526A"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_info"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/dp10" />

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp15"
            android:theme="@style/MyEditTextTheme"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:layout_gravity="center"
            android:textColor="#48526A"
            android:layout_weight="2" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="@dimen/dp10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:orientation="horizontal">

                <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Personal session"
                    android:textAllCaps="true"
                    android:textColor="#48526A"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="4" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_me"
                    android:rotation="90"
                    android:layout_weight="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cecece" />
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/morview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp150"
                android:visibility="visible"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="@dimen/dp10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:orientation="horizontal">

                <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Personal session"
                    android:textAllCaps="true"
                    android:textColor="#48526A"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="4" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_me"
                    android:rotation="90"
                    android:layout_weight="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cecece" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp150"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="@dimen/dp10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:orientation="horizontal">

                <com.app.newuidashboardadmin.font.FiraSansRegularTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Personal session"
                    android:textAllCaps="true"
                    android:textColor="#48526A"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="4" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_me"
                    android:rotation="90"
                    android:layout_weight="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cecece" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp150"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>